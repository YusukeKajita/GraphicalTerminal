<Window x:Class="NightWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" AllowsTransparency="True" WindowStyle="None" Background="{x:Null}" BorderBrush="Black" Cursor="IBeam" PreviewKeyDown="MainWindow_PreviewKeyDown">
    <Grid Background="#99000000" >
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <DockPanel>
            <StackPanel x:Name="StackPanel_Log" VerticalAlignment="Bottom">
                <TextBlock x:Name="TextBlock_Log"/>
            </StackPanel>
        </DockPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1">
                <TextBlock x:Name="TextBlock_CurrentDirectory"/>
                <TextBlock Text=" "/>
                <TextBox x:Name="TextBox_Command"/>
        </StackPanel>
        </Grid>
    </Grid>
</Window>
